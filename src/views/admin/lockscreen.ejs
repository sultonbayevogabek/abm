<%- include('./parts/header')%>
<% var error %>
<!-- lock-screen-content -->
<div class="page-content">
    <div class="container text-center text-dark">
        <div class="row">
            <div class="col-lg-4 d-block mx-auto">
                <div class="row">
                    <div class="col-xl-12 col-md-12 col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <span class="m-4 d-none d-lg-block text-center">
                                    <span class="h4"><strong>Admin</strong></span>
                                </span>
                                <% if(error) {%>
                                    <div class="alert alert-danger">
                                        <%= error %>
                                    </div>
                                <%}%>
                                <form class="form-group"  method="POST">
                                    <input type="text" class="form-control" name="name" placeholder="Your login" required>
                                    <input type="password" class="form-control mt-3 mb-5" name="password" placeholder="Password" required>
                                    <button href="index.html" class="btn btn-primary btn-block">Submit</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- lock-screen-content end -->
